{
  "devDependencies": {
    "prettier": "2.0.5",
    "lint-staged": "10.1.2",
    "husky": "4.2.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "@types/node": "12.12.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "semver": "7.3.2",
    "typescript": "3.8.3",
    "vsce": "1.75.0",
    "@types/mocha": "5.2.7",
    "mocha": "7.1.1",
    "lerna": "3.20.2"
  },
  "scripts": {
    "build": "tsc -b ./server ./clients/vscode",
    "format": "prettier  \"**/*.{ts,js,json,md}\"   --write",
    "lint": "eslint */**/**/*.{js,ts,css,json,md} --fix --ext",
    "watch": "npm run build -- -w",
    "compile": "tsc -b ./server ./clients/vscode",
    "vscode:prepublish": "npm run build",
    "vsce:publish": "sh scripts/publish.sh",
    "vsce:postpublish": "(cd ./clients/vscode && npm i && sh scripts/publish.sh)",
    "postinstall": "lerna exec npm install",
    "vsce:check": "yarn shell:lint && sh scripts/check-update.sh",
    "shell:lint": "shellcheck -x scripts/*.sh",
    "test": "sh ./scripts/e2e.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*/**/**/*.{js,ts,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*/**/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
